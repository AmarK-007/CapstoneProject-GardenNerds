<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Ensure the status bar is not translucent -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="android:statusBarColor">@color/colorPrimaryDeepDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDeepDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>

    </style>

    <style name="AppTheme.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorErrorText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button_style" parent="Theme.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Custom style for TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="errorTextColor">@color/colorErrorText</item>
    </style>

    <!-- Custom style for TextInputEditText -->
    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
    </style>

    <style name="CustomSearchTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
    </style>

    <style name="BellezaRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@fonts/belleza_regular</item>
    </style>

    <style name="RobotoRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@fonts/roboto_regular</item>
    </style>

    <style name="ITCRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@fonts/itc_officina_sans_book_font</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/background_material_light</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="fontFamily">@fonts/roboto_light</item>
    </style>

    <style name="cardViewStyle" parent="">
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="SpinnerTheme" parent="Base.Widget.AppCompat.Spinner">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="custom_card" parent="CardView">
        <item name="cardBackgroundColor">@color/card_color</item>
        <item name="elevation">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="MyDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorGrayLight</item>
        <item name="colorControlActivated">@color/colorGrayLight</item>
        <item name="colorControlHighlight">@color/colorGrayLight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/colorGrayLight</item>
        <item name="android:backgroundTint">@color/colorGrayLight</item>
        <item name="android:textSize">14sp</item>

    </style>
</resources>