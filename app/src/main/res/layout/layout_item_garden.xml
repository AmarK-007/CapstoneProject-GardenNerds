<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- ImageView for Garden Image -->
    <ImageView
        android:id="@+id/imageViewGarden"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/new_garden_nerds" />

    <!-- Vertical Layout for Garden Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- TextView for Garden Name -->
        <TextView
            android:id="@+id/textViewGardenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garden Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- TextView for Garden Area -->
        <TextView
            android:id="@+id/textViewGardenArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area: 0 sq ft"
            android:textSize="14sp"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>