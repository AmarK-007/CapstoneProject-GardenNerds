<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@fonts/roboto_light"
        android:text="@string/update_address"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/updateAddressOneWrapper"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <EditText
            android:id="@+id/updateAddress1"
            style="@style/CustomTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Address 1"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Address 2 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/updateAddressTwoWrapper"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <EditText
            android:id="@+id/updateAddress2"
            style="@style/CustomTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Address 2"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Postal Code -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/updatePostalCodeWrapper"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <EditText
            android:id="@+id/updatePostalCode"
            style="@style/CustomTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Postal Code"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- City -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/updateCityWrapper"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <EditText
            android:id="@+id/updateCity"
            style="@style/CustomTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/roboto_light"
            android:hint="City"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/updateProvinceSpinnerWrapper"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <Spinner
            android:id="@+id/updateProvinceSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/SpinnerTheme" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/updateBtn"
        style="@style/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Update" />

</LinearLayout>