<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayLight"
    tools:context=".activity.ReminderListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/activity_small_margin"
            android:text="@string/reminders"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@color/colorPrimaryDark"
            android:paddingStart="@dimen/_25dp"
            android:paddingEnd="@dimen/_25dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:padding="@dimen/_1dp"
                android:text="@string/name"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:padding="@dimen/_1dp"
                android:text="@string/frequency"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:autoSizePresetSizes=""
                android:autoSizeTextType="uniform"
                android:padding="@dimen/_1dp"
                android:text="@string/type"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12dp"
            android:paddingEnd="@dimen/_12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReminders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_25dp"
            android:paddingEnd="@dimen/_25dp"
            android:paddingBottom="@dimen/_25dp"
            tools:listitem="@layout/custom_reminder_list_item" />
    </LinearLayout>


</androidx.wear.widget.BoxInsetLayout>