<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.google.android.wearable.permission.RECEIVE_COMPLICATION_DATA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wearable.GardenNerdsApp">
        <activity
            android:name=".activity.PlantListActivity"
            android:exported="true" />
        <activity
            android:name=".activity.GardenDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MyGardenActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ReminderListActivity"
            android:exported="true"
            android:theme="@style/Theme.Wearable.GardenNerdsApp">

        </activity>
        <activity
            android:name="com.android.msd.capstone.project.wear.gardennerds.activity.WearDetailActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.msd.capstone.project.wear.gardennerds.OPEN_DETAIL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Wearable.GardenNerdsApp"
            tools:ignore="WearRecents">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="androidx.wear.activity.ConfirmationActivity" />

       <!-- <service
            android:name=".service.WearDataLayerListenerService"
            android:exported="true">
           &lt;!&ndash; <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER"
                    tools:ignore="WearableBindListener" />
            </intent-filter>&ndash;&gt;
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
            </intent-filter>
        </service>

        <receiver android:name=".receiver.DataReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.ACTION_SEND_DATA" />
            </intent-filter>

        </receiver>-->


        <receiver android:name=".receiver.NotificationDismissReceiver"
            android:enabled="true"/>
        <receiver
            android:name=".receiver.ReminderReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_REMINDER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>